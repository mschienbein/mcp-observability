{
  "commands": [
    "set -euxo pipefail",
    "echo ==== systemctl docker ====",
    "systemctl is-active docker || true",
    "echo ==== docker ps ====",
    "docker ps --format '{{.Names}} {{.Status}}' || true",
    "echo ==== http ping ====",
    "curl -fsS http://127.0.0.1:8123/ping || echo FAIL",
    "echo ==== listeners ====",
    "ss -ltnp | egrep ':8123|:9000' || true",
    "echo ==== container logs (last 50) ====",
    "docker logs --tail=50 clickhouse || true"
  ]
}
